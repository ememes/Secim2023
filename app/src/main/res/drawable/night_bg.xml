<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="135"
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="#6f608a"
        android:startColor="#2e332f"
        android:type="linear" />

    <corners
        android:bottomLeftRadius="120dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="120dp" />

    <padding
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp" />

    <size
        android:width="150dp"
        android:height="150dp" />

</shape>